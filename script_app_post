#!/bin/sh

set `ps aux | grep loginwindow.app | grep -v grep`
USERNAME=$1
USERID=$2

echo "login window user name is \"$USERNAME\" and PID is $USERID"

if [[ -n "$USERNAME" && -n "$USERID" ]]; then
  /bin/launchctl bsexec "$USERID" /usr/bin/su "$USERNAME" -c "/usr/bin/open /Applications/TotalTerminal.app"
fi